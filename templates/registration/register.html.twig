{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {# Affichez les erreurs de validation de l'adresse e-mail si elles existent #}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {# Affichez les erreurs de validation globales du formulaire #}
    {{ form_errors(registrationForm) }}

    {# Début du formulaire #}
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        {# Bouton d'envoi du formulaire #}
        <input type="submit" class="btn btn-success btn-block" value="S'inscrire">
    {{ form_end(registrationForm) }}
        
    <p><a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a></p>
{% endblock %}
